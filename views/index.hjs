  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
  <script charset="utf8" src="/datatables.min.js"></script>

  <script type="text/javascript">

    var refreshData, table, smstable;

    $(document).ready(function () {
        table = $('#index').DataTable({
            "ajax": {
                "url": "/infoTributaria/{{email}}",
                "type": "post",
                "dataType": 'json'
            },
            "columns": [
                {"data": "email"},
                {"data": "guid", class: "hidden guid_column"},
                {"data": "ambiente"},
                {"data": "tipoEmision"},
                {"data": "razonSocial"},
                {"data": "nombreComercial"},
                {"data": "ruc"},
                {"data": "claveAcceso"},
                {"data": "codDoc"},
                {"data": "estab"},
                {"data": "ptoEmi"},
                {"data": "secuencial"},
                {"data": "dirMatriz"}
            ],
            "columnDefs": [{"targets": 0, "orderable": false}],
            "ordering": true,
            "scroller": {
                "loadingIndicator": true
            },
            "scrollX": true,
            "scrollY": 300,
            "scrollCollapse": true
        });

        detalles = $('#detalles').DataTable({
                "ajax": {
                    "url" : "/detalles",
                    "type" : "post",
                    "dataType" : 'json'
                },
                "columns": [
                    { "data": "codigoPrincipal"},
                    { "data": "descripcion"},
                    { "data": "cantidad"},
                    { "data": "precioUnitario"},
                    { "data": "descuento"},
                    { "data": "precioTotalSinImpuesto"},
                    { "data": "impuesto_codigo"},
                    { "data": "impuesto_codigoPorcentaje"},
                    { "data": "impuesto_tarifa"},
                    { "data": "impuesto_baseImponible"},
                    { "data": "impuesto_valor"}
                ],
                "columnDefs": [ { "targets": 0, "orderable": false } ],
                "ordering": true,
                "scroller": {
                    "loadingIndicator": true
                },
                "scrollX": true,
                "scrollY": 200,
                "scrollCollapse": true
            });


      $( "#dialog" ).dialog({
        "width" : 1000,
          "height": 400,
        "buttons": [
          {
            text: "OK",
            click: function() {
              $( this ).dialog( "close" );
            }
            //Uncommenting the following line would hide the te-
            //xt, resulting in the label being used as a tooltip
            //showText: false
          }
        ]
      });
      $( "#dialog" ).dialog("close");

        infoAdicional = $('#infoAdicional').DataTable({
            "ajax": {
                "url" : "/infoAdicional",
                "type" : "post",
                "dataType" : 'json'
            },
            "columns": [
                { "data": "nombre"},
                { "data": "text"}
            ],
            "columnDefs": [ { "targets": 0, "orderable": false } ],
            "ordering": true,
            "scroller": {
                "loadingIndicator": true
            },
            "scrollX": true,
            "scrollY": 200,
            "scrollCollapse": true
        });


        $( "#dialog1" ).dialog({
            "width" : 1000,
            "height": 400,
            "buttons": [
                {
                    text: "OK",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ]
        });
        $( "#dialog1" ).dialog("close");


        infoFactura = $('#infoFactura').DataTable({
            "ajax": {
                "url" : "/infoFactura",
                "type" : "post",
                "dataType" : 'json'
            },
            "columns": [
                { "data": "fechaEmision"},
                { "data": "dirEstablecimiento"},
                { "data": "contribuyenteEspecial"},
                { "data": "obligadoContabilidad"},
                { "data": "tipoIdentificacionComprador"},
                { "data": "razonSocialComprador"},
                { "data": "identificacionComprador"},
                { "data": "totalSinImpuestos"},
                { "data": "totalDescuento"},
                { "data": "propina"},
                { "data": "importeTotal"},
                { "data": "moneda"}
            ],
            "columnDefs": [ { "targets": 0, "orderable": false } ],
            "ordering": true,
            "scroller": {
                "loadingIndicator": true
            },
            "scrollX": true,
            "scrollY": 200,
            "scrollCollapse": true
        });


        $( "#dialog2" ).dialog({
            "width" : 1000,
            "height": 400,
            "buttons": [
                {
                    text: "OK",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ]
        });
        $( "#dialog2" ).dialog("close");

        totalConImpuestos = $('#totalConImpuestos').DataTable({
            "ajax": {
                "url" : "/totalConImpuestos",
                "type" : "post",
                "dataType" : 'json'
            },
            "columns": [
                { "data": "codigo"},
                { "data": "codigoPorcentaje"},
                { "data": "baseImponible"},
                { "data": "tarifa"},
                { "data": "valor"}
            ],
            "columnDefs": [ { "targets": 0, "orderable": false } ],
            "ordering": true,
            "scroller": {
                "loadingIndicator": true
            },
            "scrollX": true,
            "scrollY": 200,
            "scrollCollapse": true
        });


        $( "#dialog3" ).dialog({
            "width" : 1000,
            "height": 400,
            "buttons": [
                {
                    text: "OK",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ]
        });
        $( "#dialog3" ).dialog("close");

    });

    // $(document).on('click', 'tr', function () {
    //   KeyTable( table );
    // });
    //clicking on the row makes the row colour navy blue.
    $(document).on('click', 'table#index > tbody tr', function () {
      if ( $(this).hasClass('selected') ) {
        $(this).removeClass('selected');
//        showHideOthersButton();
      }
      else {
        table.$('tr.selected').removeClass('selected');
        $(this).addClass('selected');
//                $.fn.dataTable.KeyTable( table );
//        showHideOthersButton();
      }
//            showHideOthersButton();
    });


    $(document).on('click', 'table#sms > tbody tr', function () {
      // alert("click");
      if ( $(this).hasClass('selected') ) {
        $(this).removeClass('selected');
      }
      else {
        smstable.$('tr.selected').removeClass('selected');
        $(this).addClass('selected');
//                $.fn.dataTable.KeyTable( smstable );
      }
    });


    //button called to load the new data in the tranlog table
    function reloadButtonCalled(){
      table.ajax.url('/tranlog/users').load();
      document.getElementById("showOtherButton").disabled = "disabled";
//            $.fn.dataTable.KeyTable( table );
    }


    function detallesCalled() {
      var currCell = "", guid="";
      currCell = table.$('tr.selected');
      if(currCell.text() == "") {
          return;
      }
      guid = currCell.find("td.guid_column").text();

      $( "#dialog" ).dialog({
        "width" : 1000,
          "height": 400,
        "buttons": [
          {
            text: "OK",
            click: function() {
              $( this ).dialog( "close" );
            }
          }
        ]
      });

      document.getElementById("dialog").style.visibility = "visible";
        detalles.ajax.url("/detalles/"+ guid).load();

    }

    function infoAdicionalCalled() {
        var currCell = "", guid="";
        currCell = table.$('tr.selected');
        if(currCell.text() == "") {
            return;
        }
        guid = currCell.find("td.guid_column").text();
        infoAdicional.ajax.url("/infoAdicional/"+ guid).load();
        $( "#dialog1" ).dialog({
            "width" : 1000,
            "height": 400,
            "buttons": [
                {
                    text: "OK",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ]
        });

        document.getElementById("dialog1").style.visibility = "visible";
    }

    function infoFacturaCalled() {
        var currCell = "", guid="";
        currCell = table.$('tr.selected');
        if(currCell.text() == "") {
            return;
        }
        guid = currCell.find("td.guid_column").text();
        infoFactura.ajax.url("/infoFactura/"+ guid).load();
        $( "#dialog2" ).dialog({
            "width" : 1000,
            "height": 400,
            "buttons": [
                {
                    text: "OK",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ]
        });

        document.getElementById("dialog2").style.visibility = "visible";
    }

    function totalConImpuestosCalled() {
        var currCell = "", guid="";
        currCell = table.$('tr.selected');
        if(currCell.text() == "") {
            return;
        }
        guid = currCell.find("td.guid_column").text();
        totalConImpuestos.ajax.url("/totalConImpuestos/"+ guid).load();
        $( "#dialog3" ).dialog({
            "width" : 1000,
            "height": 400,
            "buttons": [
                {
                    text: "OK",
                    click: function() {
                        $( this ).dialog( "close" );
                    }
                }
            ]
        });

        document.getElementById("dialog3").style.visibility = "visible";
    }


  </script>

  <title>{{title}}</title>
</head>

